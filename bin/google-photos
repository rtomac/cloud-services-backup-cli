#!/bin/bash

source .environment

COMMAND="$1"
case $COMMAND in

  "copy")

    USER=$2
    YEAR=$3
    REMOTE="photos-$USER"
    echo Using rclone remote $REMOTE
    run-rclone copy --stats 0 --ignore-existing "$REMOTE":"media/by-year/$YEAR" "$BACKUPDATAD/google-photos/$USER/$YEAR"
    ;;

  *)

    echo "Invalid command"
    exit 1
    ;;

esac

